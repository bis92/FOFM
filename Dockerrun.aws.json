{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "bis92/fofm-client",
            "hostname": "client",
            "essential": false,
            "memory": 512
        },
        {
            "name": "server",
            "image": "bis92/fofm-server",
            "hostname": "server",
            "essential": false,
            "memory": 256
        },
        {
            "name": "nginx",
            "image": "bis92/fofm-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}